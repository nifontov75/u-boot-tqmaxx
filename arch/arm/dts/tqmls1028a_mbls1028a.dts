/dts-v1/;

#include "fsl-ls1028a.dtsi"

/ {
	model = "TQMLS1028A on MBLS1028A";
	compatible = "tqc,tqmls1028a", "fsl,ls1028a";
	aliases {
		spi0 = &fspi;
	};

	qixis: qixis {
		#address-cells=<0>;
		#size-cells=<1>;
	};
};

&fspi {
	bus-num = <0>;
	status = "okay";

	qflash0: mt25qu02g@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-flash";
		spi-max-frequency = <20000000>; 
		reg = <0>;
	 };
};

&enetc_pcie {
	ethernet@0 {
		phy-mode = "sgmii";
		phy-handle = <&enetc_phy0>;
	};
	ethernet@1 {
		phy-mode = "rgmii";
		phy-handle = <&enetc_phy1>;
	};
	netc_mdio {
		#address-cells=<0>;
		#size-cells=<1>;
		enetc_phy0: phy@3 {
			reg = <3>;
		};
		enetc_phy1: phy@0 {
			reg = <0>;
		};
	};
};

&sata {
	status = "okay";
};
